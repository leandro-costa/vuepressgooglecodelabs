.home .hero img
  max-width 450px!important

p, li
  text-align justify
  hyphens auto

p.description, p.action
  text-align center

body {
    counter-reset: figures;
    counter-reset: tables;
}

figure {
    counter-increment: figures;
    text-align: center;
}

figcaption {
    font-style: normal;
    font-weight: bold;
    display: inherit;
    text-align: center;
    font-size: 90%;
}

figcaption:before {
    content: 'Figura ' counter(figures) ' - ';
}

table {
    counter-increment: tables;
}

table>caption {
    font-style: normal;
    font-weight: bold;
    caption-side: top;
    text-align: center;
    font-size: 90%;
    background: none;
    border-bottom: none;
    color: #172b4d;
}

table>caption:before {
    content: 'Tabela ' counter(tables) ' - ';
}

li > ol > li {
    list-style: lower-alpha;
}